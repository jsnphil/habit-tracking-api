{
	"name": "habit-tracking-api",
	"version": "0.1.0",
	"bin": {
		"habit-tracking-api": "bin/habit-tracking-api.js"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:unit": "vitest run --config vite.config.ts",
		"test:infra": "vitest run --config vitest.config.infra.ts",
		"test:infra:watch": "vitest --config vitest.config.infra.ts",
		"test:infra:coverage": "vitest run --coverage --config vitest.config.infra.ts",
		"cdk": "cdk",
		"deploy-dev": "cdk deploy Dev/* --require-approval never",
		"ci": "npm run build && npm test",
		"check": "biome check",
		"format": "biome format --write",
		"fix": "biome check --apply"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/aws-lambda": "^8.10.159",
		"@types/node": "^22.19.0",
		"@vitest/coverage-v8": "^4.0.8",
		"aws-cdk": "2.1031.2",
		"ts-node": "^10.9.2",
		"typescript": "~5.6.3",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"aws-cdk-lib": "2.222.0",
		"constructs": "^10.0.0",
		"uuid": "^13.0.0",
		"zod": "^4.1.12"
	}
}
