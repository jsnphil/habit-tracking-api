{
  "name": "habit-tracking-api",
  "version": "0.1.0",
  "bin": {
    "habit-tracking-api": "bin/habit-tracking-api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "deploy-dev": "cdk deploy Dev/* --require-approval never",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "format:fix": "biome format . --write",
    "biome:check": "biome check .",
    "biome:fix": "biome check . --write",
    "code:check": "npm run lint:check && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format:fix",
    "ci": "npm run build && npm run code:check && npm test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/aws-lambda": "^8.10.157",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.46.3",
    "aws-cdk": "2.1007.0",
    "esbuild": "^0.25.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.28.1",
    "@aws-sdk/client-dynamodb": "^3.927.0",
    "@aws-sdk/client-eventbridge": "^3.927.0",
    "@aws-sdk/util-dynamodb": "^3.927.0",
    "aws-cdk-lib": "2.186.0",
    "constructs": "^10.0.0",
    "zod": "^4.1.12"
  }
}
